# Allow access to uploaded files
Options +FollowSymLinks
RewriteEngine Off

# Security: Prevent PHP execution in uploads folder
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow common image types
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
